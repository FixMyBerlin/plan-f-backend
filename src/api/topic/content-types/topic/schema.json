{
  "kind": "collectionType",
  "collectionName": "topics",
  "info": {
    "singularName": "topic",
    "pluralName": "topics",
    "displayName": "Handlungsfeld",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "measures": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::measure.measure",
      "mappedBy": "topic"
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "number": {
      "type": "integer",
      "min": 1,
      "required": true,
      "unique": true
    },
    "additionalResources": {
      "type": "component",
      "repeatable": true,
      "component": "links.links"
    },
    "guidelines": {
      "type": "component",
      "repeatable": true,
      "component": "links.links"
    }
  }
}
